 <% if @user.errors.any? %>
  <%= @user.errors.count %>件のerrorが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>  

  <div class="container">
  <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      

      

<h2>User info</h2>

<%= form_with model: @user do |f| %>

   <div class="form-group">
    Name
     </div>
  <%= f.text_field :name, class: "btn-block" %>
     
  <div class="form-group"></div>
    <div class="form-group">
       Image
        </div>
  <%= f.file_field :profile_image, accept: "image/*" %>
    
  <div class="form-group"></div>
   <div class="form-group">
        Introduction
        </div>
  <%= f.text_area :introduction, class: "btn-block" %>
  
  
   
   <div class="form-group"></div>
  <%= f.submit 'Update User', class: "btn btn-secondary" %>
   
  
<% end %>

</div> 
  </div> 
  </div> 

