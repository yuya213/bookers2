<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
     <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <%= link_to "Bookers", root_path, class:'navbar-brand'  %>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="true" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="navbar-collapse collapse show" id="navbarNavDropdown" style="">
        <ul class="navbar-nav ml-auto">

  
  
    <% if user_signed_in? %>
    <il class="nav-item">
       <%= link_to user_path(current_user.id), class:'nav-link text-light' do %>
       <l class=""></l>Home
       <% end %>
    </il>
    
    <il class="nav-item">
      <%= link_to users_path, class:'nav-link text-light' do %>
    <l class=""></l>Users
       <% end %>
    </il>
    
    <il class="nav-item">
      <%= link_to books_path, class:'nav-link text-light' do %>
    <l class=""></l>Books
       <% end %>
    </il>
   
    <il class="nav-item">
        <%= link_to destroy_user_session_path, method: :delete, class:'nav-link text-light' do %>
    <l class=""></l>Log out
       <% end %>
    </il>
      
    <% else %>
     
     <il class="nav-item">
       <%= link_to root_path, class:'nav-link text-light' do %>
       <l class=""></l>Home
       <% end %>
      </il>
       
       <il class="nav-item">
       <%= link_to about_path, class:'nav-link text-light' do %>
       <l class=""></l>About
       <% end %>
       </il>
    
      <il class="nav-item">
        <%= link_to new_user_registration_path, class:'nav-link text-light' do %>
        <l class=""></l>Sign up
        <% end %>
      </il>
     
      <il class="nav-item">
        <%= link_to new_user_session_path, class:'nav-link text-light' do %>
         <l class=""></l>Log in
         <% end %>
      </il>
      
    <% end %>
    
       </ul>
      </div>
    </div>
  </nav>
 </header>

    <%= yield %>
    
     
    
    <footer>
  <div class="container mt-5">
  	<div class="row">
    	<div class="mx-auto">
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>
  </body>
</html>
